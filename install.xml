<!--
Installation model

    1. by path & name
    path - absolute path to the file
    name - file name

    2. type
    * systemd-tmpfiles  - install $(project.name) to /usr/lib/systemd/tmpfiles.d/
     -->

<install>
    <item type = "systemd-tmpfiles" />
    <item path = "/var/lib/fty/fty-metric-snmp/rules" name = "../rules/linuxdisk.rule" />
    <item path = "/var/lib/fty/fty-metric-snmp/rules" name = "../rules/linuxload.rule" />
    <item path = "/var/lib/fty/fty-metric-snmp/rules" name = "../rules/nagios-plugin-style.rule" />
</install>
